<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net8.0-windows</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <UseWPF>true</UseWPF>
    <UseWindowsForms>true</UseWindowsForms>
    <RootNamespace>MacMode.App</RootNamespace>
    <!-- <ApplicationIcon>Resources\tray-on.ico</ApplicationIcon> -->
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="..\MacMode.Core\MacMode.Core.csproj" />
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Include="..\..\profiles\default.json" Link="DefaultProfiles\default.json" />
    <EmbeddedResource Include="..\..\profiles\chrome.json" Link="DefaultProfiles\chrome.json" />
    <EmbeddedResource Include="..\..\profiles\vscode.json" Link="DefaultProfiles\vscode.json" />
    <EmbeddedResource Include="..\..\profiles\warp.json" Link="DefaultProfiles\warp.json" />
    <EmbeddedResource Include="..\..\profiles\terminal.json" Link="DefaultProfiles\terminal.json" />
    <EmbeddedResource Include="..\..\profiles\explorer.json" Link="DefaultProfiles\explorer.json" />
  </ItemGroup>

</Project>
