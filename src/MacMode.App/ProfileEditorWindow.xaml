<Window x:Class="MacMode.App.ProfileEditorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MacMode - Profile Editor"
        Width="820" Height="560"
        MinWidth="700" MinHeight="450"
        WindowStartupLocation="CenterScreen"
        Background="#1E1E2E"
        Foreground="#CDD6F4">

    <Window.Resources>
        <!-- Shared styles for the dark theme -->
        <SolidColorBrush x:Key="PanelBg" Color="#181825"/>
        <SolidColorBrush x:Key="CardBg" Color="#313244"/>
        <SolidColorBrush x:Key="AccentBlue" Color="#89B4FA"/>
        <SolidColorBrush x:Key="AccentGold" Color="#F9E2AF"/>
        <SolidColorBrush x:Key="TextPrimary" Color="#CDD6F4"/>
        <SolidColorBrush x:Key="TextSecondary" Color="#A6ADC8"/>
        <SolidColorBrush x:Key="TextMuted" Color="#6C7086"/>
        <SolidColorBrush x:Key="BorderBrush" Color="#45475A"/>
        <SolidColorBrush x:Key="DangerRed" Color="#F38BA8"/>
        <SolidColorBrush x:Key="SuccessGreen" Color="#A6E3A1"/>

        <Style x:Key="DarkButton" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource CardBg}"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#45475A"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="AccentButton" TargetType="Button" BasedOn="{StaticResource DarkButton}">
            <Setter Property="Background" Value="#313244"/>
            <Setter Property="Foreground" Value="{StaticResource AccentBlue}"/>
            <Setter Property="BorderBrush" Value="{StaticResource AccentBlue}"/>
        </Style>

        <Style x:Key="DangerButton" TargetType="Button" BasedOn="{StaticResource DarkButton}">
            <Setter Property="Foreground" Value="{StaticResource DangerRed}"/>
            <Setter Property="BorderBrush" Value="{StaticResource DangerRed}"/>
        </Style>

        <Style x:Key="RecordButton" TargetType="Button" BasedOn="{StaticResource DarkButton}">
            <Setter Property="Foreground" Value="{StaticResource AccentGold}"/>
            <Setter Property="BorderBrush" Value="{StaticResource AccentGold}"/>
            <Setter Property="Padding" Value="6,3"/>
            <Setter Property="FontSize" Value="11"/>
        </Style>

        <Style x:Key="DarkTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="#181825"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="6,4"/>
            <Setter Property="CaretBrush" Value="{StaticResource TextPrimary}"/>
        </Style>

        <Style x:Key="FieldLabel" TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource TextSecondary}"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Margin" Value="0,0,0,4"/>
        </Style>
    </Window.Resources>

    <Grid Margin="16">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="16"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Left panel: profile list -->
        <Border Grid.Column="0" Background="{StaticResource PanelBg}" CornerRadius="8" Padding="12">
            <DockPanel>
                <TextBlock DockPanel.Dock="Top" Text="Profiles" FontSize="16" FontWeight="SemiBold"
                           Foreground="{StaticResource TextPrimary}" Margin="0,0,0,10"/>

                <StackPanel DockPanel.Dock="Bottom" Margin="0,10,0,0">
                    <Button x:Name="NewProfileBtn" Content="New Profile" Style="{StaticResource AccentButton}"
                            Click="OnNewProfile" Margin="0,0,0,6"/>
                    <Button x:Name="DeleteProfileBtn" Content="Delete Profile" Style="{StaticResource DangerButton}"
                            Click="OnDeleteProfile"/>
                </StackPanel>

                <ListBox x:Name="ProfileListBox" Background="Transparent" BorderThickness="0"
                         Foreground="{StaticResource TextPrimary}"
                         SelectionChanged="OnProfileSelected">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding}" Padding="4,6" FontSize="13"/>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                    <ListBox.ItemContainerStyle>
                        <Style TargetType="ListBoxItem">
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
                            <Setter Property="Margin" Value="0,1"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="ListBoxItem">
                                        <Border x:Name="ItemBorder" Background="{TemplateBinding Background}"
                                                CornerRadius="4" Padding="4,2">
                                            <ContentPresenter/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsSelected" Value="True">
                                                <Setter TargetName="ItemBorder" Property="Background" Value="#45475A"/>
                                            </Trigger>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="ItemBorder" Property="Background" Value="#313244"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </ListBox.ItemContainerStyle>
                </ListBox>
            </DockPanel>
        </Border>

        <!-- Right panel: profile editor -->
        <Border Grid.Column="2" Background="{StaticResource PanelBg}" CornerRadius="8" Padding="16">
            <DockPanel x:Name="EditorPanel" IsEnabled="False">

                <!-- Top: profile metadata -->
                <StackPanel DockPanel.Dock="Top" Margin="0,0,0,12">
                    <TextBlock Text="Profile Name" Style="{StaticResource FieldLabel}"/>
                    <TextBox x:Name="ProfileNameBox" Style="{StaticResource DarkTextBox}" Margin="0,0,0,10"/>

                    <StackPanel x:Name="ProcessNamesPanel">
                        <TextBlock Text="Process Names (comma-separated)" Style="{StaticResource FieldLabel}"/>
                        <TextBox x:Name="ProcessNamesBox" Style="{StaticResource DarkTextBox}"
                                 ToolTip="e.g. chrome, msedge, brave"/>
                    </StackPanel>
                </StackPanel>

                <!-- Bottom: action buttons -->
                <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" HorizontalAlignment="Right"
                            Margin="0,12,0,0">
                    <Button x:Name="ResetBtn" Content="Reset to Default" Style="{StaticResource DarkButton}"
                            Click="OnResetToDefault" Margin="0,0,8,0"/>
                    <Button Content="Save" Style="{StaticResource AccentButton}"
                            Click="OnSave"/>
                </StackPanel>

                <!-- Middle: mappings grid -->
                <DockPanel>
                    <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="0,0,0,8">
                        <TextBlock Text="Mappings" FontSize="14" FontWeight="SemiBold"
                                   Foreground="{StaticResource TextPrimary}" VerticalAlignment="Center"/>
                        <Button Content="Add" Style="{StaticResource AccentButton}"
                                Click="OnAddMapping" Margin="12,0,0,0" Padding="10,4"/>
                        <Button Content="Remove" Style="{StaticResource DangerButton}"
                                Click="OnRemoveMapping" Margin="6,0,0,0" Padding="10,4"/>
                    </StackPanel>

                    <DataGrid x:Name="MappingsGrid"
                              AutoGenerateColumns="False"
                              CanUserAddRows="False"
                              CanUserDeleteRows="False"
                              CanUserReorderColumns="False"
                              HeadersVisibility="Column"
                              GridLinesVisibility="Horizontal"
                              HorizontalGridLinesBrush="#45475A"
                              Background="#181825"
                              Foreground="{StaticResource TextPrimary}"
                              BorderBrush="{StaticResource BorderBrush}"
                              BorderThickness="1"
                              RowBackground="#1E1E2E"
                              AlternatingRowBackground="#181825"
                              SelectionMode="Single"
                              RowHeaderWidth="0">

                        <DataGrid.ColumnHeaderStyle>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="Background" Value="#313244"/>
                                <Setter Property="Foreground" Value="{StaticResource TextSecondary}"/>
                                <Setter Property="Padding" Value="8,6"/>
                                <Setter Property="BorderBrush" Value="#45475A"/>
                                <Setter Property="BorderThickness" Value="0,0,1,1"/>
                                <Setter Property="FontSize" Value="12"/>
                            </Style>
                        </DataGrid.ColumnHeaderStyle>

                        <DataGrid.CellStyle>
                            <Style TargetType="DataGridCell">
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
                                <Setter Property="BorderThickness" Value="0"/>
                                <Setter Property="Padding" Value="4,2"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="DataGridCell">
                                            <Border Background="{TemplateBinding Background}"
                                                    Padding="{TemplateBinding Padding}">
                                                <ContentPresenter VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter Property="Background" Value="#45475A"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </DataGrid.CellStyle>

                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Trigger" Binding="{Binding Trigger, UpdateSourceTrigger=PropertyChanged}"
                                                Width="*" IsReadOnly="True">
                                <DataGridTextColumn.EditingElementStyle>
                                    <Style TargetType="TextBox">
                                        <Setter Property="Background" Value="#181825"/>
                                        <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
                                        <Setter Property="CaretBrush" Value="{StaticResource TextPrimary}"/>
                                    </Style>
                                </DataGridTextColumn.EditingElementStyle>
                            </DataGridTextColumn>

                            <DataGridTemplateColumn Header="" Width="60">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Button Content="Record" Style="{StaticResource RecordButton}"
                                                Tag="Trigger"
                                                Click="OnRecordClick"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                            <DataGridTextColumn Header="Action" Binding="{Binding Action, UpdateSourceTrigger=PropertyChanged}"
                                                Width="*" IsReadOnly="True">
                                <DataGridTextColumn.EditingElementStyle>
                                    <Style TargetType="TextBox">
                                        <Setter Property="Background" Value="#181825"/>
                                        <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
                                        <Setter Property="CaretBrush" Value="{StaticResource TextPrimary}"/>
                                    </Style>
                                </DataGridTextColumn.EditingElementStyle>
                            </DataGridTextColumn>

                            <DataGridTemplateColumn Header="" Width="60">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Button Content="Record" Style="{StaticResource RecordButton}"
                                                Tag="Action"
                                                Click="OnRecordClick"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </DockPanel>
            </DockPanel>
        </Border>

        <!-- Recording overlay -->
        <Border x:Name="RecordingOverlay" Grid.ColumnSpan="3" Visibility="Collapsed"
                Background="#CC181825" CornerRadius="8">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="Recording Hotkey..."
                           FontSize="22" FontWeight="SemiBold"
                           Foreground="{StaticResource AccentGold}"
                           HorizontalAlignment="Center" Margin="0,0,0,10"/>
                <TextBlock x:Name="RecordingDisplay" Text="Press a key combination"
                           FontSize="16" Foreground="{StaticResource TextPrimary}"
                           HorizontalAlignment="Center" Margin="0,0,0,16"/>
                <TextBlock Text="Press Escape to cancel"
                           FontSize="12" Foreground="{StaticResource TextMuted}"
                           HorizontalAlignment="Center"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
